
#include <stdio.h>
int main()
{
char str1[100], str2[100];
char * s1 = str1;
char * s2 = str2;
printf("Enter Your FirstName: \n");
gets(str1);//Input1: Skill
printf("Enter Your LastName : \n");
gets(str2);//Input:2 Pundit
while(*(++s1));
while(*(s1++) = *(s2++));
printf("Concatenated string: %s\n", str1);
return 0;
}
